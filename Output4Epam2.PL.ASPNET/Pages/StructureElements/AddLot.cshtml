@using Output4Epam.Entities
@using Output4Epam.Providers

@{
	bool isUser = User.Identity.Name == String.Empty ? false : LogicProvider.RegUserLogic.IsUserInRole(User.Identity.Name, RoleScroll.User.ToString());
}

@{
	Layout = @"/Pages/Layouts/MainLayout.cshtml";
}

@if (isUser)
{
	<div class="col-xs-2 checkboxes">
		<p>Choose category</p>
		<div class="checkbox">
			<ul>
				@foreach (var item in Enum.GetValues(typeof(LotTypes)))
				{
					if (item.ToString() == LotTypes.None.ToString())
					{
						continue;
					}

					<li>
						<input type="checkbox" name="@item" data-enumValue="@((int)item)">
						@item.ToString()
					</li>
				}
			</ul>
		</div>
	</div>

	<form class="form-horizontal col-xs-8" enctype="multipart/form-data" method="post" action="~/Pages/AJAX/AddLot.cshtml">
		<div class="form-group">
			<label for="inputTitle" class="col-xs-2 control-label">Title</label>
			<div class="col-xs-10">
				<div class="col-xs-10">
					<input type="text" class="form-control" name="Title" id="inputTitle" placeholder="Title">
				</div>
				<div class="col-xs-2">
					<span id="inputTitleAfter" class="inputafter inputafterTitle hidden wrong">Wrong</span>
					<span id="inputTitleAfter" class="inputafter inputafterTitle hidden correct">OK</span>
				</div>
			</div>
		</div>
		<div class="form-group">
			<label for="inputCost" class="col-xs-2 control-label">Photo</label>
			<div class="col-xs-10">
				<div class="col-xs-10">

					<input type="file" name="Photo" id="photo" placeholder="Photo">
				</div>
			</div>
		</div>

		<div class="form-group">
			<label for="inputSity" class="col-xs-2 control-label">Sity</label>
			<div class="col-xs-10">
				<div class="col-xs-10">

					<input type="text" class="form-control" name="Sity" id="inputSity" placeholder="Sity">
				</div>
				<div class="col-xs-2">
					<span id="inputTitleAfter" class="inputafter inputafterSity hidden wrong">Wrong</span>
					<span id="inputTitleAfter" class="inputafter inputafterSity hidden correct">OK</span>
				</div>
			</div>
		</div>

		<div class="form-group">
			<label for="inputCost" class="col-xs-2 control-label">Cost</label>
			<div class="col-xs-10">
				<div class="col-xs-10">

					<input type="text" class="form-control" name="Cost" id="inputCost" placeholder="Cost">
				</div>
				<div class="col-xs-2">
					<span id="inputTitleAfter" class="inputafter inputafterCost hidden wrong">Wrong</span>
					<span id="inputTitleAfter" class="inputafter inputafterCost hidden correct">OK</span>
				</div>
			</div>
		</div>
		<div class="form-group">
			<label for="inputInfo" class="col-xs-2 control-label">Info</label>
			<div class="col-xs-10">
				<div class="col-xs-10">

					<input type="text" class="form-control" name="Info" id="inputInfo" placeholder="Info">
				</div>
				<div class="col-xs-2">
					<span id="inputTitleAfter" class="inputafter inputafterInfo hidden wrong">Wrong</span>
					<span id="inputTitleAfter" class="inputafter inputafterInfo hidden correct">OK</span>
				</div>
			</div>
		</div>
	</form>

	<div class="form-group">
		<div class="col-xs-offset-2 col-xs-10">
			<button type="submit" class="btn btn-default add">Publish</button>
		</div>
	</div>
}

@section script{
	<script src="~/scripts/MyScripts/add.js"></script>
}