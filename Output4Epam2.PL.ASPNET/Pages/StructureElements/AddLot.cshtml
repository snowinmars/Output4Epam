@using Output4Epam.Entities
@using Output4Epam.Providers

@{
	bool isUser = LogicProvider.RegUserLogic.IsUserInRole(User.Identity.Name, RoleScroll.User.ToString());
}

@{ 
	Layout = @"/Pages/Layouts/MainLayout.cshtml";
}

@if (isUser)
{
<p>Choose category</p>
<div class="col-xs-1 checkboxes">
	<div class="checkbox">
		<label>
			<input type="checkbox" value="">
			Fun
		</label>
		<label>
			<input type="checkbox" value="">
			Technic
		</label>
		<label>
			<input type="checkbox" value="">
			Cloth
		</label>
	</div>
</div>

<form class="form-horizontal col-xs-8" enctype="multipart/form-data" method="post" action="~/Pages/AJAX/AddLot.cshtml">
	<div class="form-group">
		<label for="inputTitle" class="col-xs-2 control-label">Title</label>
		<div class="col-xs-10">
			<input type="text" class="form-control" name="Title" id="inputTitle" placeholder="Email">
		</div>
	</div>
	<div class="form-group">
		<label for="inputSity" class="col-xs-2 control-label">Sity</label>
		<div class="col-xs-10">
			<input type="text" class="form-control" name="Sity" id="inputSity" placeholder="Password">
		</div>
	</div>
	<div class="form-group">
		<label for="inputCost" class="col-xs-2 control-label">Cost</label>
		<div class="col-xs-10">
			<input type="text" class="form-control" name="Cost" id="inputCost" placeholder="Password">
		</div>
	</div>
	<div class="form-group">
		<label for="inputInfo" class="col-xs-2 control-label">Info</label>
		<div class="col-xs-10">
			<input type="text" class="form-control" name="Info" id="inputInfo" placeholder="Password">
		</div>
	</div>
</form>

<div class="form-group">
	<div class="col-xs-offset-2 col-xs-10">
		<button type="submit" class="btn btn-default">Sign in</button>
	</div>
</div>
}