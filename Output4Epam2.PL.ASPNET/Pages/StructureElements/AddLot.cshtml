@using Output4Epam.Entities
@using Output4Epam.Providers

@{
	bool isUser = LogicProvider.RegUserLogic.IsUserInRole(User.Identity.Name, RoleScroll.User.ToString());
}

@{
	Layout = @"/Pages/Layouts/MainLayout.cshtml";
}

@if (isUser)
{
	<div class="col-xs-2 checkboxes">
		<p>Choose category</p>
		<div class="checkbox">
			<ul class="typelist">
				<li>
					<label>
						<input type="checkbox" value="">
						Fun
					</label>
				</li>
				<li>
					<label>
						<input type="checkbox" value="">
						Technic
					</label>
				</li>
				<li>
					<label>
						<input type="checkbox" value="">
						Cloth
					</label>
				</li>
			</ul>
		</div>
	</div>

	<form class="form-horizontal col-xs-8" enctype="multipart/form-data" method="post" action="~/Pages/AJAX/AddLot.cshtml">
		<div class="form-group">
			<label for="inputTitle" class="col-xs-2 control-label">Title</label>
			<div class="col-xs-10">
				<input type="text" class="form-control" name="Title" id="inputTitle" placeholder="Title">
			</div>
		</div>
		<div class="form-group">
			<label for="inputCost" class="col-xs-2 control-label">Photo</label>
			<div class="col-xs-10">
				<input type="file" name="Photo" id="photo" placeholder="Photo">
			</div>
		</div>
		<div class="form-group">
			<label for="inputSity" class="col-xs-2 control-label">Sity</label>
			<div class="col-xs-10">
				<input type="text" class="form-control" name="Sity" id="inputSity" placeholder="Sity">
			</div>
		</div>
		<div class="form-group">
			<label for="inputCost" class="col-xs-2 control-label">Cost</label>
			<div class="col-xs-10">
				<input type="text" class="form-control" name="Cost" id="inputCost" placeholder="Cost">
			</div>
		</div>
		<div class="form-group">
			<label for="inputInfo" class="col-xs-2 control-label">Info</label>
			<div class="col-xs-10">
				<input type="text" class="form-control" name="Info" id="inputInfo" placeholder="Info">
			</div>
		</div>
	</form>

	<div class="form-group">
		<div class="col-xs-offset-2 col-xs-10">
			<button type="submit" class="btn btn-default add">Publish</button>
		</div>
	</div>
}